<?xml version="1.0" encoding="UTF-8"?>

   <!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>

    <form-beans>
    	<form-bean name="deptForm" type="com.acc.form.DepartmentForm"/>
    	
    </form-beans>

	<global-forwards>
        <forward name="/deptDashboard" path="/deptDashboard.do"/>
    </global-forwards>

    <action-mappings>
        <action path="/deptDashboard" type="com.acc.struts1.action.DeptDashBoardAction" name="deptForm">
        	<forward name="success" path="/deptDashboard.jsp" />
        </action>
       
        
        <action path="/addEmployee" forward="/addEmployee.jsp"/>
          
          
         <action path="/addDepartment" type="com.acc.struts1.action.AddDepartmentAction" name="deptForm">
        	<forward name="success" path="deptDashboard.do" />
        </action>
        
        
        
        <action path="/updateDepartment" type="com.acc.struts1.action.UpdateDeptAction" validate="false" name="deptForm">
        	<forward name="success" path="/updateDeptSuccess.jsp" />
        </action>
        
        
        
        
    </action-mappings>
<message-resources    parameter="ApplicationResources"/> 
    
    <plug-in className="org.apache.struts.validator.ValidatorPlugIn" >
        <set-property property="pathnames" 
        value="/WEB-INF/validator-rules.xml,/WEB-INF/validation.xml"/>
    </plug-in>
 	
</struts-config>
